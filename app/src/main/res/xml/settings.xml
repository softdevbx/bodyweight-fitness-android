<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Play Audio When">

        <CheckBoxPreference
            android:key="PREFERENCE_PLAY_SOUND_WHEN_TIMER_STOPS"
            android:title="Timer stops"
            android:defaultValue="true" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Experimental">

        <CheckBoxPreference
            android:key="PREFERENCE_KEEP_SCREEN_ON"
            android:title="Keep screen always on"
            android:summary="Prevents screen from turning off when app is running"
            android:defaultValue="true" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Developed by">

        <Preference
            android:title="Damian Mazurkiewicz"
            android:summary="github.com/mazurio"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="About the app">

        <Preference
            android:title="@string/app_name"
            android:summary="@string/app_version"/>
    </PreferenceCategory>
</PreferenceScreen>