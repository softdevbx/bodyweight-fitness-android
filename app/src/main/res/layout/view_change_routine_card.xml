<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_change_routine_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/view_change_routine_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/view_change_routine_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#000"
                app:typeface="roboto_regular" />
        </android.support.v7.widget.Toolbar>

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/view_change_routine_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_change_routine_toolbar"
            android:layout_alignParentLeft="true"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:textSize="16sp"
            android:textColor="#80000000"
            app:typeface="roboto_regular" />

        <RelativeLayout
            android:id="@+id/view_change_routine_border"
            android:layout_below="@+id/view_change_routine_subtitle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E4E4E4"/>

        <LinearLayout
            android:id="@+id/view_change_routine_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_change_routine_border"
            android:orientation="horizontal">

            <com.devspark.robototextview.widget.RobotoButton
                android:id="@+id/view_change_routine_download_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:background="@android:color/transparent"
                android:textAllCaps="true"
                android:textColor="#80000000"
                android:textSize="14sp"
                android:text="Download"
                app:typeface="roboto_medium" />

            <com.devspark.robototextview.widget.RobotoButton
                android:id="@+id/view_change_routine_set_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:background="@android:color/transparent"
                android:textAllCaps="true"
                android:textColor="#80000000"
                android:textSize="14sp"
                android:text="Set Routine"
                app:typeface="roboto_medium" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>