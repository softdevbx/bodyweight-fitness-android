<?xml version="1.0" encoding="utf-8"?>
<!-- Unused AT THE MOMENT -->
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:src="@drawable/ic_refresh"
            app:layout_anchorGravity="bottom|right|end"/>
    </RelativeLayout>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/AppTheme.Toolbar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_scrollFlags="scroll|enterAlways"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/prev_exercise_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@drawable/view_action_exercise_drawable"
                android:scaleType="center"
                android:src="@drawable/ic_prev"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight=".60">

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/levelTextView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:text="Level 1"
                    android:textColor="@color/primaryDark"
                    android:gravity="center"
                    android:layout_alignTop="@+id/levelProgressBar"
                    android:layout_alignLeft="@+id/levelProgressBar"
                    android:layout_alignRight="@+id/levelProgressBar"
                    android:layout_alignBottom="@+id/levelProgressBar"
                    app:typeface="roboto_light"/>

                <io.mazur.fit.view.CircularProgressBar
                    android:id="@+id/levelProgressBar"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <ImageButton
                android:id="@+id/next_exercise_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@drawable/view_action_exercise_drawable"
                android:scaleType="center"
                android:src="@drawable/ic_next"/>
        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            app:tabIndicatorColor="@color/primaryDark"
            app:tabTextColor="@color/primaryDark"
            app:tabSelectedTextColor="@color/primaryDark"
            app:tabMode="fixed"/>
    </android.support.design.widget.AppBarLayout>
</android.support.design.widget.CoordinatorLayout>